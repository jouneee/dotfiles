{
    "custom/os_button": {
        "format": "鸡",
        "tooltip": false
    },
    "niri/language": {
        "format": "{}",
        "format-en": "ENG",
        "format-ru": "РУС"
    },
    "niri/workspaces": {
        "format": "{icon}",
        "icon-size": 24,
        "spacing": 10,
        "format-icons": {
            "active": "",
            "default": ""
        }
    },
    "cpu": {
        "interval": 5,
        "format": " {usage}% ",
        "max-length": 10
    },
    "disk": {
        "interval": 30,
        "format": " {percentage_used}% 󰋊",
        "path": "/",
        "tooltip": true,
        "unit": "GB",
        "tooltip-format":  "Available {free} of {total}"
    },
    "memory": {
        "interval": 10,
        "format": " {percentage}% ",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": "RAM - {used:0.1f}GiB used"
    },
    "wlr/taskbar": {
        "format": "{icon} {name}",
        "icon-size": 24,
        "spacing": 2,
        "on-click": "activate",
        "on-click-right": "minimize",
        "on-click-middle": "close",
        "tooltip-format": "{title}",
        "ignore-list": []
    },
    "tray": {
        "icon-size": 24,
        "spacing": 8    
    },
    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%A %d.%m.%y}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "network": {
        "format": "{bandwidthDownBits} ",
        "interval": 5,
        "format-wifi": " {icon}",
        "format-disconnected": "No connection 󰌙",
        "tooltip-format": "{ipaddr}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)   \n{ipaddr} | {frequency} MHz{icon} ",
        "tooltip-format-ethernet": "{ifname} 󰈀 \n{ipaddr} | {frequency} MHz{icon} ",
        "tooltip-format-disconnected": "Not Connected to any type of Network",
        "tooltip": true,
    },
    "pulseaudio#input": {
        "format-source": "",
        "format-source-muted": " ",
        "format": "{format_source}",
        "scroll-step": false,
        "smooth-scrolling-threshold": 1,
        "max-volume": 100,
        "on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
        "on-click-middle": "pavucontrol",
        "on-scroll-up": false,
        "on-scroll-down": false
    },
    "pulseaudio#output": {
        "format": "{icon} ",
        "format-muted": "x",
        "format-icons": {
            "default": ["", "", ""]
        },
        "max-volume": 100,
        "scroll-step": false,
        "smooth-scrolling-threshold": 1,
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-middle": "pavucontrol"
    },
    
    "custom/nvidia": {
    "exec": "nvidia-smi --query-gpu=utilization.gpu,temperature.gpu --format=csv,nounits,noheader | sed 's/\\([0-9]\\+\\), \\([0-9]\\+\\)/\\1% \\2°C/g'",
    "format": "gpu {} 󰍹",
    "interval": 5
    },
    "group/hardware": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-hardware",
            "transition-left-to-right": true
        },
        "modules": [
            "custom/arrow",
            "custom/nvidia",
            "cpu",
            "memory",
            "disk",
            "network"
        ]
    },
    "group/power": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": true
        },
        "modules": [
            "custom/os_button",
            "custom/quit",
            "custom/lock",
            "custom/reboot",
            "custom/power"
        ]

    },
"custom/quit": {
    "format": "󰗼",
    "tooltip": false,
    "on-click": "hyprctl dispatch exit"
},
"custom/lock": {
    "format": "󰍁",
    "tooltip": false,
    "on-click": "swaylock"
},
"custom/reboot": {
    "format": "󰜉",
    "tooltip": false,
    "on-click": "reboot"
},
"custom/power": {
    "format": "",
    "tooltip": false,
    "on-click": "shutdown now"
},
"custom/arrow": {
    "format": "--",
    "tooltip": "false"
},
"image": {
  "exec": "~/.config/waybar/album-art.sh",
  "size": 40,
  "interval": 12,
  "on-click": "playerctl pause",
  "on-click-right": "playerctl play"
},
"custom/metadata": {
    "exec": "~/.config/waybar/album-metadata.sh",
    "format": "{}",
    "interval": 12
},
"custom/separator": {
    "format": "",
    "tooltip": false
}
}
